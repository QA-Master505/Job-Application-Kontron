{
  "name": "job-application-kontron",
  "version": "1.0.0",
  "description": "Automated job application testing framework for Kontron AG using Playwright with TypeScript",
  "type": "commonjs",
  "scripts": {
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:chrome": "playwright test --project=chromium",
    "test:ci": "playwright test --project=chromium --reporter=line,html --trace=off --video=off",
    "test:grep": "playwright test --grep",
    "report": "playwright show-report",
    "clean": "rimraf test-results playwright-report",
    "lint": "tsc --noEmit"
  },
  "engines": {
    "node": ">=18"
  },
  "devDependencies": {
    "@playwright/test": "^1.54.2",
    "typescript": "^5.9.2",
    "@types/node": "^24.2.1",
    "dotenv": "^17.2.1",
    "rimraf": "^5.0.10"
  }
}
