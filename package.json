{
  "name": "job-application-kontron",
  "version": "1.0.0",
  "description": "Automated job application testing framework for Kontron AG using Playwright with TypeScript",
  "type": "commonjs",
  "scripts": {
    "test": "playwright test",                        // Run all tests
    "test:ui": "playwright test --ui",                // Run tests in UI mode
    "test:chrome": "playwright test --project=chromium", // Chromium only
    "test:ci": "playwright test --project=chromium --reporter=line,html --trace=off --video=off", 
                                                     // CI-optimized run
    "test:grep": "playwright test --grep",            // Run tests by pattern
    "report": "playwright show-report",               // Open last HTML report
    "clean": "rimraf test-results playwright-report", // Cross-platform cleanup
    "lint": "tsc --noEmit"                            // Type-check only
  },
  "engines": {
    "node": ">=18"
  },
  "devDependencies": {
    "@playwright/test": "^1.54.2",
    "typescript": "^5.9.2",
    "@types/node": "^24.2.1",
    "dotenv": "^17.2.1",
    "rimraf": "^5.0.10"
  }
}
